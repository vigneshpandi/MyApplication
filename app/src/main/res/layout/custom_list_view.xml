<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_field_name"
        android:gravity="left"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/layout_field_id"
        android:layout_alignStart="@+id/layout_field_id"
        android:textColor="#666666"/>

    <Button
        android:text="Cancel"
        android:background="@color/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/cancel_btn"
        android:textColor="@color/btn_text_color"
        android:layout_alignBottom="@+id/layout_field_name"
        android:layout_alignLeft="@+id/accept_btn"
        android:layout_alignStart="@+id/accept_btn" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/layout_field_id"
        android:layout_below="@+id/layout_field_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Invite"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/accept_btn"
        android:background="@color/accept_btn"
        android:textColor="@color/btn_text_color"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/layout_field_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>