<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="chat"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAllCaps="false"
        android:id="@+id/chat_btn"
        android:gravity="center"
        android:background="@color/accept_btn"
        android:textColor="@color/btn_text_color"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/layout_field_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_field_name"
        android:gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id"
        android:layout_below="@+id/chat_btn"
        android:layout_alignLeft="@+id/layout_field_name"
        android:layout_alignStart="@+id/layout_field_name" />
</RelativeLayout>