<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bluemapletech.hippatextapp.activity.HomeActivity">

    <include
        android:id="@+id/toolbar_header"
        layout="@layout/toolbar_header" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center">

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_color"
            android:text="Go To Login"
            android:textAppearance="@style/appFont"
            android:textColor="@color/btn_text_color" />

        <Button
            android:id="@+id/register_as_comp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/btn_color"
            android:text="Register As Company"
            android:textAppearance="@style/appFont"
            android:textColor="@color/btn_text_color" />

        <Button
            android:id="@+id/register_as_emp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/btn_color"
            android:text="Register As Employee"
            android:textAppearance="@style/appFont"
            android:textColor="@color/btn_text_color" />

    </LinearLayout>
</LinearLayout>