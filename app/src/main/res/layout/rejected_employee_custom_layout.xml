<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_custom_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:id="@+id/user_mail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id"
        android:gravity="left"
        android:layout_below="@+id/user_mail"
        android:layout_alignLeft="@+id/user_mail"
        android:layout_alignStart="@+id/user_mail"
        android:textColor="#0080ff"/>

    <Button
        android:text="Chat"
        android:background="@color/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/chat_btn"
        android:textAppearance="@style/appFont"
        android:textColor="@color/btn_text_color"
        android:layout_alignTop="@+id/user_mail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>