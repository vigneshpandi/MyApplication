<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_custom_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:id="@+id/root_mail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/root_name"
        android:gravity="left"
        android:layout_below="@+id/root_mail"
        android:layout_alignLeft="@+id/root_mail"
        android:layout_alignStart="@+id/root_mail"
        android:textColor="@color/textColor"/>

    <Button
        android:text="Reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/root_mail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/reject_btn"
        android:background="@color/cancel_btn"
        android:layout_above="@+id/root_name"
        android:textColor="#ffffff"/>


</RelativeLayout>