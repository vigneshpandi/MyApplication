<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_user_admin_details"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.bluemapletech.hippatextapp.activity.ViewUserAdminDetails">

    <include
        android:id="@+id/toolbar_header"
        layout="@layout/toolbar_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/layout_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="provider Email Id  :"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIN/EIN Number  :"/>

            <TextView
                android:id="@+id/employee_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name   :"/>

            <TextView
                android:id="@+id/comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/provider_npi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider NPI Id    :"/>

            <TextView
                android:id="@+id/provider_npi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider Name    :"/>

            <TextView
                android:id="@+id/provider_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/accept_user_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:background="#34bf49"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>



</RelativeLayout>
